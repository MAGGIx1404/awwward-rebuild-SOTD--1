extends ../base.pug

block variables
    - var template = 'work'

block body
    .work(data-background="" data-color="")
        canvas.webgl-container
        //- Scroll wrapper
        .work__wrapper
            .work__banner
                .work__banner__bg__wrapper
                    figure.work__banner__picture__wrapper
                        img.work__banner__picture.parallax__image(data-src=work.data.banner[0].banner_pic.url, alt=work.data.banner[0].banner_pic.url crossorigin="anonymous")
                .work__banner__titles__wrapper
                    h1.work__banner__title.splitter!=work.data.banner[0].banner_title.replace(/\n/g,"</br>")
                    h4.work__banner__role.splitter!=work.data.banner[0].banner_role.replace(/\n/g,"</br>")
            //- info
            .work__info__wrapper
                .work__info__wrapper__inner
                    .work__info__left
                        p.work__info__text(data-animation="paragraph")!=work.data.work_info[0].work_time.replace(/\n/g,"</br>")
                    .work__info__right
                        p.work__info__text(data-animation="paragraph")!=work.data.work_info[0].work_text.replace(/\n/g,"</br>")

            //- Main Pictures
            .work__pictures__wrapper
                .work__pictures__wrapper__inner
                    //- from server
                    each link in work.data.work_pics
                        figure.work__picture__wrapper
                            img.work__picture.parallax__image(data-src=link.pic.url, alt=link.pic.alt)

            //- Content
            .work__content__wrapper
                .work__content__wrapper__inner
                    p.work__content__text(data-animation="paragraph")!=work.data.work_content[0].work_text.replace(/\n/g,"</br>")

            //- work screen
            .work__screen__wrapper
                figure.work__screen__wrapper__inner
                    img.work__screen__picture.parallax__image(data-src=work.data.work_bg[0].pic.url, alt=work.data.work_bg[0].pic.alt)

            //- info-2
            .work__info__wrapper
                .work__info__wrapper__inner
                    .work__info__left
                        p.work__info__text(data-animation="paragraph")!=work.data.work_content1[0].work_title.replace(/\n/g,"</br>")
                    .work__info__right
                        p.work__info__text(data-animation="paragraph")!=work.data.work_content1[0].work_text.replace(/\n/g,"</br>")

            //- Main Pictures 2
            .work__pictures__wrapper
                .work__pictures__wrapper__inner
                    //- from server
                    each link in work.data.work_pics2
                        figure.work__picture__wrapper
                            img.work__picture.parallax__image(data-src=link.pic.url, alt=link.pic.alt)

            //- next section
            .work__next__wrapper
                figure.work__next__bg__wrapper
                    img.work__next__bg__picture.parallax__image(data-src=work.data.next_section[0].next_pic.url, alt=work.data.next_section[0].next_pic.alt)
                .work__next__wrapper__inner
                    h6.work__next__title(data-animation="paragraph") Next Project
                    a.work__next__btn(href=`/work/${work.data.next_section[0].next_title.uid}` data-animation="paragraph")!=work.data.next_section[0].next_namer.replace(/\n/g,"</br>")

            include ../partials/footer
